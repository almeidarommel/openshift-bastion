version: '3.7'
services:
  openshift-bastion:
    build: .
    image: openshift-bastion:{{ OCP_VERSION }}
    container_name: openshift-bastion
    hostname: openshift-bastion
    restart: always
    network_mode: host
    dns:
      - {{ DNSSERVER_IP }}
      - 8.8.8.8
    ports:
      - 80:80
    volumes: 
      - ${HOME}/ocp-installer/sharedfolder:/home/ocp{{ OCP_USERID }}/sharedfolder