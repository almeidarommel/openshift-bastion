version: '3.7'
services:
  ocpv{{ OCP_VERSION }}-bootstrap:
    build: .
    container_name: ocpv{{ OCP_VERSION }}-bootstrap
    hostname: ocpv{{ OCP_VERSION }}-bootstrap
    restart: always
    network_mode: host
    ports:
      - 80:80
    volumes: 
      - ${HOME}/ocp/sharedfolder:/home/ocp{{ OCP_USERID }}/sharedfolder
          